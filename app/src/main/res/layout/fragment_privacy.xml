<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".settings.FragmentPrivacy">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"  app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gradient_toolbar_background"
                app:navigationIcon="@drawable/ic_back"
                app:titleTextColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="@dimen/_24sdp"  android:layout_height="@dimen/_24sdp"  android:layout_marginEnd="@dimen/_8sdp"  android:contentDescription="@string/privacy_shield_icon"
                        android:src="@drawable/ic_studymaterial"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvToolbarTitle"
                        style="@style/ToolbarTitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.02"
                        android:text="@string/privacy_policy"
                        android:textSize="@dimen/_18sdp"  />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_12sdp"  android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12sdp">  <androidx.cardview.widget.CardView
                android:id="@+id/cardHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/_12sdp"  app:cardElevation="2dp"  app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHeaderImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"  android:alpha="0.8"
                        android:contentDescription="@string/medical_education_banner"
                        android:scaleType="centerCrop"
                        android:src="@drawable/flag_china"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"  android:background="@drawable/gradient_toolbar_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvHeaderTitle"
                        style="@style/CardTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"  android:layout_marginBottom="@dimen/_40sdp"  android:textColor="@color/white"
                        android:text="@string/your_privacy_matters"
                        android:textSize="@dimen/_18sdp"  app:layout_constraintBottom_toBottomOf="@id/ivHeaderImage"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvLastUpdated"
                        style="@style/CaptionTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_12sdp"  android:text="@string/last_updated_march_1_2025"
                        android:textSize="@dimen/_10sdp"  app:layout_constraintBottom_toBottomOf="@id/ivHeaderImage"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvHeaderSubtitle"
                        style="@style/BodyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp"  android:text="@string/doctor_cubes_privacy_promise"
                        android:textSize="@dimen/_12sdp"  android:lineSpacingExtra="@dimen/_2sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivHeaderImage" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/privacyPolicyContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"  android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardHeader">

                    <TextView
                        style="@style/SectionTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/privacy_policy_title"
                        android:textSize="@dimen/_16sdp"/>  <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/privacy_policy_description" />

                    <TextView
                        style="@style/SubTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/information_we_collect_title"
                        android:textSize="@dimen/_14sdp"/>  <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/information_we_collect_intro" />

                    <TextView
                        style="@style/SubTitleTextStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"  android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/personal_information_title"
                        android:textSize="@dimen/_13sdp"/>  <TextView
                    android:id="@+id/personal_info_details"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"  android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/personal_information_details" />

                    <TextView
                        style="@style/SubTitleTextStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"  android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/usage_data_title"
                        android:textSize="@dimen/_13sdp"/>  <TextView
                    android:id="@+id/usage_data_details"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"  android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/usage_data_details" />

                    <TextView
                        style="@style/SubTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/how_we_use_your_information_title"
                        android:textSize="@dimen/_14sdp"/>  <TextView
                    android:id="@+id/how_we_use_info_content"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/how_we_use_your_information_content" />

                    <TextView
                        style="@style/SubTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/information_sharing_title"
                        android:textSize="@dimen/_14sdp"/>  <TextView
                    android:id="@+id/information_sharing_content"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/information_sharing_content" />

                    <TextView
                        style="@style/SubTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/data_security_title"
                        android:textSize="@dimen/_14sdp"/>  <TextView
                    android:id="@+id/data_security_content"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/data_security_content" />

                    <TextView
                        style="@style/SubTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/your_rights_title"
                        android:textSize="@dimen/_14sdp"/>  <TextView
                    android:id="@+id/your_rights_content"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/your_rights_content" />

                    <TextView
                        style="@style/SubTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/data_retention_title"
                        android:textSize="@dimen/_14sdp"/>  <TextView
                    android:id="@+id/data_retention_content"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/data_retention_content" />

                    <TextView
                        style="@style/SubTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/changes_to_policy_title"
                        android:textSize="@dimen/_14sdp"/>  <TextView
                    android:id="@+id/changes_to_policy_content"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/changes_to_policy_content" />

                    <TextView
                        style="@style/SubTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"  android:text="@string/contact_us_title"
                        android:textSize="@dimen/_14sdp"/>  <TextView
                    android:id="@+id/contact_us_content"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"  android:lineSpacingExtra="4dp"
                    android:textSize="@dimen/_12sdp"  android:text="@string/contact_us_details" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
