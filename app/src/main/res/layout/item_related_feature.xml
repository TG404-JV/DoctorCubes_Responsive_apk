<?xml version="1.0" encoding="utf-8"?>
<!-- Item layout for related features recycler view -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Feature Image with color overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/ivRelatedFeature"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/feature_image"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_waving_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_feature_overlay" />

            <ImageView
                android:id="@+id/ivFeatureIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@string/feature_icon"
                android:padding="8dp"
                android:background="@drawable/circle_white_transparent"
                tools:src="@drawable/icon_visa" />
        </FrameLayout>

        <!-- Feature Title and Brief Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvRelatedFeatureTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_primary_color"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Feature Title" />

            <TextView
                android:id="@+id/tvRelatedFeatureDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_tertiary_color"
                android:textSize="12sp"
                tools:text="Brief description of the feature" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>