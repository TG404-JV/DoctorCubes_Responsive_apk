<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"  android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/gradient_toolbar_background"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/ThemeOverlay.Material3.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/app_logo"
                android:layout_width="@dimen/_36sdp"  android:layout_height="@dimen/_36sdp"  android:background="@android:color/transparent"  app:shapeAppearanceOverlay="@style/CircleShape"
                android:src="@drawable/logo_doctor_cubes_white"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/app_logo"
                android:layout_centerVertical="true"
                android:letterSpacing="0.02"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"  android:textStyle="bold" />

            <ImageView
                android:id="@+id/call_button"
                android:layout_width="@dimen/_40sdp"  android:layout_height="@dimen/_40sdp"  android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_4sdp"  android:background="?attr/selectableItemBackgroundBorderless"  android:clickable="true"
                android:contentDescription="@string/call_support_disc"
                android:focusable="true"
                android:padding="@dimen/_8sdp"  android:src="@drawable/ic_call"
                app:tint="@color/white"  tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background_color"
        app:layout_constraintBottom_toTopOf="@id/navigation_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navigation_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/MedicalCardStyle"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
            android:id="@+id/bubbleNavigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/nav_background"
            android:elevation="8dp"
            android:paddingTop="@dimen/_6sdp"  android:paddingBottom="@dimen/_6sdp"  app:bnc_mode="spread">

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/nav_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bt_active="true"
                app:bt_colorActive="@color/primary_color"
                app:bt_colorInactive="@color/tab_unselected"
                app:bt_icon="@drawable/ic_home"
                app:bt_iconWidth="@dimen/_28sdp"  app:bt_iconHeight="@dimen/_28sdp"  app:bt_padding="@dimen/_6sdp"  app:bt_shape="@drawable/rounded_rect_shape"
                app:bt_shapeColor="@color/card_background"
                app:bt_title="Home"
                app:bt_titleSize="13sp"  app:bt_titlePadding="4dp"  app:bt_duration="200"  />

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/nav_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bt_active="false"
                app:bt_colorActive="@color/primary_color"
                app:bt_colorInactive="@color/tab_unselected"
                app:bt_icon="@drawable/ic_notes"
                app:bt_iconWidth="@dimen/_28sdp"
                app:bt_iconHeight="@dimen/_28sdp"
                app:bt_padding="@dimen/_6sdp"
                app:bt_shape="@drawable/rounded_rect_shape"
                app:bt_shapeColor="@color/card_background"
                app:bt_title="Study"
                app:bt_titleSize="13sp"
                app:bt_titlePadding="4dp"
                app:bt_duration="200" />


            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/nav_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bt_active="false"
                app:bt_colorActive="@color/primary_color"
                app:bt_colorInactive="@color/tab_unselected"
                app:bt_icon="@drawable/ic_setting"
                app:bt_iconWidth="@dimen/_28sdp"
                app:bt_iconHeight="@dimen/_28sdp"
                app:bt_padding="@dimen/_6sdp"
                app:bt_shape="@drawable/rounded_rect_shape"
                app:bt_shapeColor="@color/card_background"
                app:bt_title="Settings"
                app:bt_titleSize="13sp"
                app:bt_titlePadding="4dp"
                app:bt_duration="200" />
        </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
