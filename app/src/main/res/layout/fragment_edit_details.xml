<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background_professional"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Profile Image Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImageView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_profile"
                        app:civ_border_color="@color/medical_primary_blue"
                        app:civ_border_width="2dp" />

                    <ImageView
                        android:id="@+id/editProfileImageBtn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignEnd="@id/profileImageView"
                        android:layout_alignBottom="@id/profileImageView"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/medical_primary_blue"
                        android:padding="4dp"
                        android:src="@drawable/ic_edit"
                        app:tint="@color/white" />

                </RelativeLayout>

                <!-- User Name -->
                <TextView
                    android:id="@+id/userNameDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Tejas Kale"
                    android:textColor="@color/text_primary_professional"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Application Status Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/status_badge_background"
                    android:backgroundTint="@color/medical_accent_green"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/applicationStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Application Submitted"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Quick Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEET Score"
                            android:textColor="@color/text_secondary_professional"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/neetScoreDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="54"
                            android:textColor="@color/medical_primary_blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="University"
                            android:textColor="@color/text_secondary_professional"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/universityDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kemerovo State"
                            android:textColor="@color/medical_primary_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Country"
                            android:textColor="@color/text_secondary_professional"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/studyCountryDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nepal"
                            android:textColor="@color/medical_primary_blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Application Status Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background_professional"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Application Status"
                    android:textColor="@color/text_primary_professional"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Status Timeline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Applied Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/medical_accent_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Applied"
                            android:textColor="@color/medical_accent_green"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Connector Line -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="-12dp"
                        android:background="@color/divider_light" />

                    <!-- Under Review Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/status_warning" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Review"
                            android:textColor="@color/status_warning"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Connector Line -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="-12dp"
                        android:background="@color/divider_light" />

                    <!-- Admitted Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/divider_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Admitted"
                            android:textColor="@color/text_hint_professional"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Status Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Applied Date:"
                        android:textColor="@color/text_secondary_professional"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/appliedDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31 May 2025"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Last Updated:"
                        android:textColor="@color/text_secondary_professional"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lastUpdatedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22/05/25"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Edit Profile Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background_professional"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Edit Profile Information"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/editModeToggleBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/button_outline_background"
                        android:backgroundTint="@color/medical_primary_blue"
                        android:minWidth="0dp"
                        android:paddingHorizontal="16dp"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary_color"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Personal Information -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Personal Information"
                    android:textColor="@color/medical_primary_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Name Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Full Name"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/medical_primary_blue"
                    app:hintTextColor="@color/text_secondary_professional"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/medical_primary_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="Tejas Kale"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Email Address"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/medical_primary_blue"
                    app:hintTextColor="@color/text_secondary_professional"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/medical_primary_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="textEmailAddress"
                        android:text="cse.tejas@gmail.com"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mobile Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobileInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Mobile Number"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/medical_primary_blue"
                    app:hintTextColor="@color/text_secondary_professional"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="@color/medical_primary_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mobileEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="phone"
                        android:text="8788466016"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Location Information -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Location Information"
                    android:textColor="@color/medical_primary_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Country and State Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/countryInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Country"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@color/medical_primary_blue"
                        app:hintTextColor="@color/text_secondary_professional"
                        app:startIconDrawable="@drawable/ic_location"
                        app:startIconTint="@color/medical_primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/countryEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="India"
                            android:textColor="@color/text_primary_professional"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/stateInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="State"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@color/medical_primary_blue"
                        app:hintTextColor="@color/text_secondary_professional">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/stateEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="Maharashtra"
                            android:textColor="@color/text_primary_professional"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- City Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cityInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="City"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/medical_primary_blue"
                    app:hintTextColor="@color/text_secondary_professional"
                    app:startIconDrawable="@drawable/ic_city"
                    app:startIconTint="@color/medical_primary_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cityEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="aurb"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Academic Information -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Academic Information"
                    android:textColor="@color/medical_primary_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- NEET Score Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/neetScoreInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="NEET Score"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/medical_primary_blue"
                    app:hintTextColor="@color/text_secondary_professional"
                    app:startIconDrawable="@drawable/ic_score"
                    app:startIconTint="@color/medical_primary_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/neetScoreEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="number"
                        android:text="54"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Study Country Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/studyCountryInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Study Country"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/medical_primary_blue"
                    app:hintTextColor="@color/text_secondary_professional"
                    app:startIconDrawable="@drawable/ic_globe"
                    app:startIconTint="@color/medical_primary_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/studyCountryEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="Nepal"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Additional Information -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Additional Information"
                    android:textColor="@color/medical_primary_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Checkboxes Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <CheckBox
                        android:id="@+id/hasNeetScoreCheckbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:enabled="false"
                        android:text="Has NEET Score"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="14sp"
                        app:buttonTint="@color/medical_primary_blue" />

                    <CheckBox
                        android:id="@+id/hasPassportCheckbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:enabled="false"
                        android:text="Has Passport"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="14sp"
                        app:buttonTint="@color/medical_primary_blue" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:id="@+id/actionButtonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/cancelBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_outline_background"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/text_secondary_professional"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/saveBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/button_filled_background"
                        android:backgroundTint="@color/medical_primary_blue"
                        android:text="Save Changes"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Communication Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background_professional"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Communication Status"
                    android:textColor="@color/text_primary_professional"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Last Call Date:"
                        android:textColor="@color/text_secondary_professional"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lastCallDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Called Yet"
                        android:textColor="@color/status_warning"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Communication Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/callBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_gradient_background"
                        android:drawableStart="@drawable/ic_call"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/white"
                        android:padding="12dp"
                        android:text="Call Us"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/whatsappBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/button_whatsapp_background"
                        android:drawableStart="@drawable/ic_whatsapp"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/white"
                        android:padding="12dp"
                        android:text="WhatsApp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- University Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_background_professional"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="University Information"
                    android:textColor="@color/text_primary_professional"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/university_icon_bg"
                        android:padding="12dp"
                        android:src="@drawable/ic_university"
                        app:tint="@color/university_icon_tint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="University Name"
                            android:textColor="@color/text_secondary_professional"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/universityNameText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kemerovo State University"
                            android:textColor="@color/text_primary_professional"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Medical Program • Nepal"
                            android:textColor="@color/medical_primary_blue"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>