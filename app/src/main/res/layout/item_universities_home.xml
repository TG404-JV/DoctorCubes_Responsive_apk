<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:id="@+id/university_flag"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:contentDescription="university flag"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/university_name"
                style="@style/UniversityNameTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/university_location"
                style="@style/UniversityLocationTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/university_course"
                style="@style/UniversityCourseTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_tertiary_color"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/university_grade"
                style="@style/UniversityGradeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_tertiary_color"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_details"
            style="@style/MedicalPrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/view"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            app:cornerRadius="@dimen/_8sdp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
