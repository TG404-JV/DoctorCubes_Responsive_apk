<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Section Title -->
    <TextView
        android:id="@+id/contact_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_us"
        android:textColor="@color/primary_dark"
        android:textSize="20sp"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Contact Options -->
    <LinearLayout
        android:id="@+id/contact_options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <!-- Call Us Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/call_now_button"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:lottie_rawRes="@raw/lottie_phone_call"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_background_call"
                    android:scaleType="centerCrop"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Us"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get instant support"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- WhatsApp Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/whatsapp_button"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/green"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:lottie_rawRes="@raw/anim_whats_app"
                    android:background="@drawable/circle_background_whatsapp"
                    android:scaleType="centerInside"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat on Whatsapp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat anytime"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>
