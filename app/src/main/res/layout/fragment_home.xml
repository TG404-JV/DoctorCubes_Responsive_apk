<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_home_header"
                android:paddingTop="16dp"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:id="@+id/searchHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_search"
                                app:tint="#6E6E6E"
                                android:contentDescription="Search Icon" />

                            <EditText
                                android:id="@+id/searchEditText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="Search universities, exams..."
                                android:textColor="#222222"
                                android:textColorHint="#888888"
                                android:textSize="16sp"
                                android:inputType="text"
                                android:imeOptions="actionSearch"
                                android:singleLine="true" />

                            <ImageView
                                android:id="@+id/clearSearchButton"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_close_clear_cancel"
                                app:tint="#6E6E6E"
                                android:contentDescription="Clear Search"
                                android:visibility="gone" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/search_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/white"
                        android:maxHeight="300dp"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/searchHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:weightSum="3">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/studyButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="#E0F2F1"
                        app:strokeColor="#00796B"
                        app:strokeWidth="0dp"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_studymaterial"
                                app:tint="#004D40" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Study"
                                android:textColor="#004D40"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/examButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="#EDE7F6"
                        app:strokeColor="#5E35B1"
                        app:strokeWidth="0dp"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_exam"
                                app:tint="#512DA8" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Exam"
                                android:textColor="#512DA8"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/universityButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="#E8F5E9"
                        app:strokeColor="#388E3C"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_university"
                                app:tint="#2E7D32" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="University"
                                android:textColor="#2E7D32"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                style="@style/MedicalSectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/MedicalSectionTitle"
                        android:text="@string/upcoming_events" />

                    <TextView
                        android:id="@+id/see_all_events"
                        style="@style/MedicalSeeAllText"
                        android:layout_alignParentEnd="true"
                        android:text="@string/see_all" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

            <include layout="@layout/item_invite" />

            <LinearLayout
                style="@style/MedicalSectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MedicalSectionTitle"
                    android:text="@string/countries_to_study" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/country_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

            <LinearLayout
                style="@style/MedicalSectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MedicalSectionTitle"
                    android:text="@string/top_universities" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/universities_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

            <LinearLayout
                style="@style/MedicalSectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MedicalSectionTitle"
                    android:text="@string/our_services" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/features_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

            <LinearLayout
                style="@style/MedicalSectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MedicalSectionTitle"
                    android:text="@string/success_stories" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/testimonials_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include layout="@layout/item_contact" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>