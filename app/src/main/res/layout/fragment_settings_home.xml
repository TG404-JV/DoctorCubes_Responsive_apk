<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Header with Gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_toolbar_background"
            android:paddingTop="48dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/iv_settings_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_settings_medical"
                android:background="@drawable/circle_outline_bg"
                android:padding="12dp"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tv_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_settings_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_settings_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="Manage your preferences"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular" />

        </RelativeLayout>

        <!-- Settings Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            android:orientation="vertical"
            android:paddingHorizontal="5dp">

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background_professional">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Edit Profile -->
                    <RelativeLayout
                        android:id="@+id/layout_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_effect_settings"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/iv_edit_profile"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_edit_profile"
                            app:tint="@color/medical_primary_blue" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_edit_profile"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit Profile"
                                android:textColor="@color/text_primary_professional"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Update your personal information"
                                android:textColor="@color/text_secondary_professional"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_tertiary_professional" />

                    </RelativeLayout>

                    <!-- Notification Preferences -->
                    <RelativeLayout
                        android:id="@+id/layout_notification_preferences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_effect_settings"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:id="@+id/iv_notifications"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_notifications"
                            app:tint="@color/medical_accent_orange" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_notifications"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notification Preferences"
                                android:textColor="@color/text_primary_professional"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage your notifications"
                                android:textColor="@color/text_secondary_professional"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_tertiary_professional" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background_professional">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Information"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginBottom="16dp" />

                    <!-- About DoctorCubes -->
                    <RelativeLayout
                        android:id="@+id/layout_about_doctorcubes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_effect_settings"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/iv_about"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_info"
                            app:tint="@color/medical_primary_blue" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_about"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About DoctorCubes"
                                android:textColor="@color/text_primary_professional"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Learn more about our platform"
                                android:textColor="@color/text_secondary_professional"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_tertiary_professional" />

                    </RelativeLayout>

                    <!-- Privacy Policy -->
                    <RelativeLayout
                        android:id="@+id/layout_privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_effect_settings"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/iv_privacy"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_privacy"
                            app:tint="@color/medical_accent_green" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_privacy"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Privacy Policy"
                                android:textColor="@color/text_primary_professional"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Read our privacy policy"
                                android:textColor="@color/text_secondary_professional"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_external_link"
                            app:tint="@color/text_tertiary_professional" />

                    </RelativeLayout>

                    <!-- FAQ -->
                    <RelativeLayout
                        android:id="@+id/layout_faq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_effect_settings"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:id="@+id/iv_faq"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_help"
                            app:tint="@color/medical_accent_orange" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_faq"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FAQ"
                                android:textColor="@color/text_primary_professional"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Frequently asked questions"
                                android:textColor="@color/text_secondary_professional"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_tertiary_professional" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Support Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background_professional">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Support"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Contact Support -->
                    <RelativeLayout
                        android:id="@+id/layout_contact_support"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_effect_settings"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:id="@+id/iv_support"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_email"
                            app:tint="@color/support_purple" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_support"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Support"
                                android:textColor="@color/text_primary_professional"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Send us an email for assistance"
                                android:textColor="@color/text_secondary_professional"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_external_link"
                            app:tint="@color/text_tertiary_professional" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- App Version Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/versionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/logo_doctor_cubes_dynamic"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DoctorCubes"
                        android:textColor="@color/text_primary_professional"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version 1.0.0"
                        android:textColor="@color/text_secondary_professional"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â© 2025 DoctorCubes. All rights reserved."
                        android:textColor="@color/text_tertiary_professional"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>