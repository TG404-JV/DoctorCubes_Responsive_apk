<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gradient_primary_start"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/gradient_primary_start"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimAnimationDuration="300">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingTop="@dimen/_40sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:background="@drawable/gradient_toolbar_background"
                app:layout_collapseMode="parallax">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/logo_doctor_cubes_white"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="3dp"
                    app:civ_circle_background_color="@color/accent_color"
                    android:contentDescription="@string/profile_image"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/user_name"
                    style="@style/ProfileNameTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:shadowColor="#40000000"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <TextView
                    android:id="@+id/user_email"
                    style="@style/ProfileEmailTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="@string/email_address"
                    android:textColor="@color/text_primary_color"
                    android:textSize="@dimen/_14sdp"
                    android:alpha="0.9" />

                <TextView
                    android:id="@+id/user_status"
                    style="@style/ProfileStatusTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/status_badge_background"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_6sdp"
                    android:text="@string/user_status"
                    android:textColor="@color/text_primary_color"
                    android:textSize="@dimen/_12sdp"
                    android:elevation="2dp" />
            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <!-- Main content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingBottom="@dimen/_24sdp">

            <!-- Account Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/account_settings_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="1dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        style="@style/CardTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_settings"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <!-- Edit Profile -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/profile_settings_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/settings_item_bg"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="0dp"
                        app:rippleColor="@color/ripple_color">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_12sdp">

                            <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:background="@drawable/icon_circle_background"
                                android:contentDescription="@string/settings_icon"
                                android:padding="@dimen/_6sdp"
                                android:src="@android:drawable/ic_menu_manage"
                                app:tint="@color/icon_tint_primary" />

                            <TextView
                                style="@style/SettingsItemTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:text="@string/edit_profile_details"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:contentDescription="@string/arrow_icon"
                                android:rotation="180"
                                android:src="@drawable/ic_back"
                                app:tint="@color/icon_tint_secondary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Notification Settings -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/notification_settings_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/settings_item_bg"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="0dp"
                        app:rippleColor="@color/ripple_color">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_12sdp">

                            <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:background="@drawable/icon_circle_background"
                                android:contentDescription="@string/settings_icon"
                                android:padding="@dimen/_6sdp"
                                android:src="@android:drawable/ic_popup_reminder"
                                app:tint="@color/icon_tint_primary" />

                            <TextView
                                style="@style/SettingsItemTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:text="@string/notification_preferences"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:contentDescription="@string/arrow_icon"
                                android:rotation="180"
                                android:src="@drawable/ic_back"
                                app:tint="@color/icon_tint_secondary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Support and Help Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="1dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        style="@style/CardTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_and_help"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <!-- About -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/about_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/settings_item_bg"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="0dp"
                        app:rippleColor="@color/ripple_color">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_12sdp">

                            <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:background="@drawable/icon_circle_background"
                                android:contentDescription="@string/support_icon"
                                android:padding="@dimen/_6sdp"
                                android:src="@android:drawable/ic_menu_info_details"
                                app:tint="@color/icon_tint_primary" />

                            <TextView
                                style="@style/SettingsItemTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:text="@string/about_doctorcubes"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:contentDescription="@string/arrow_icon"
                                android:rotation="180"
                                android:src="@drawable/ic_back"
                                app:tint="@color/icon_tint_secondary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Privacy Policy -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/privacy_policy_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/settings_item_bg"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="0dp"
                        app:rippleColor="@color/ripple_color">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_12sdp">

                            <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:background="@drawable/icon_circle_background"
                                android:contentDescription="@string/settings_icon"
                                android:padding="@dimen/_6sdp"
                                android:src="@android:drawable/ic_lock_lock"
                                app:tint="@color/icon_tint_primary" />

                            <TextView
                                style="@style/SettingsItemTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:text="@string/privacy_policy"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:contentDescription="@string/arrow_icon"
                                android:rotation="180"
                                android:src="@drawable/ic_back"
                                app:tint="@color/icon_tint_secondary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- FAQ -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/faq_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/settings_item_bg"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="0dp"
                        app:rippleColor="@color/ripple_color">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_12sdp">

                            <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:background="@drawable/icon_circle_background"
                                android:contentDescription="@string/support_icon"
                                android:padding="@dimen/_6sdp"
                                android:src="@android:drawable/ic_menu_help"
                                app:tint="@color/icon_tint_primary" />

                            <TextView
                                style="@style/SettingsItemTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:text="@string/frequently_asked_questions"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:contentDescription="@string/arrow_icon"
                                android:rotation="180"
                                android:src="@drawable/ic_back"
                                app:tint="@color/icon_tint_secondary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Consultation Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardBackgroundColor="@color/premium_card_bg"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_48sdp"
                            android:background="@drawable/premium_icon_background"
                            android:contentDescription="@string/consultation_icon"
                            android:padding="@dimen/_12sdp"
                            android:src="@android:drawable/ic_dialog_email"
                            app:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ConsultationTitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/need_personalized_help"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/ConsultationDescriptionTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="@string/schedule_free_consultation"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/schedule_consultation_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:backgroundTint="@color/accent_color"
                        android:text="@string/schedule_consultation"
                        android:textAllCaps="false"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/_14sdp"
                        app:cornerRadius="@dimen/_12sdp"
                        app:elevation="2dp"
                        app:icon="@android:drawable/ic_menu_my_calendar"
                        app:iconGravity="textStart"
                        app:iconTint="@color/text_on_primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- App Version -->
            <TextView
                android:id="@+id/appVersion"
                style="@style/AppVersionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/app_version"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>